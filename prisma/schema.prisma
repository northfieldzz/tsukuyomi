// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Point {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.VarChar(19)
  guildId   String   @db.VarChar(19)
  value     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([userId, guildId])
}

model Invite {
  code      String    @id @db.VarChar(16)
  inviterId String?   @db.VarChar(19)
  uses      Int       @default(0)
  expires   DateTime?
}

model NotificationChannel {
  id        String @id @default(uuid()) @db.Uuid
  guildId   String @unique @db.VarChar(19)
  channelId String @db.VarChar(19)
}

model CharacterStatus {
  id      String @id @default(uuid()) @db.Uuid
  guildId String @db.VarChar(19)
  userId  String @db.VarChar(19)
  str     Int
  con     Int
  pow     Int
  dex     Int
  app     Int
  siz     Int
  int     Int
  edu     Int
  luk     Int
  san     Int
  ida     Int
  know    Int
  hp      Int
  mov     Int
  mp      Int
  skl     Int
  db      Int
  build   Int

  @@unique([guildId, userId])
}

model Meigen {
  id         Int    @id @default(autoincrement())
  userId     String @db.VarChar(19)
  registerId String @db.VarChar(19)
  content    String @db.Text
}
